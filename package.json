{
  "name": "xrpa-workspace",
  "version": "1.14.0",
  "description": "XRPA Ecosystem Monorepo",
  "private": true,
  "config": {
    "repo_path": "arvr/libraries/xred/xrpa"
  },
  "workspaces": [
    "core/internal-scripts",
    "core/xrpa-file-utils",
    "core/xrpa-llm-utils",
    "core/xrpa-orchestrator",
    "core/xrpa-utils",
    "modules/*",
    "demos/*"
  ],
  "scripts": {
    "preinstall": "(node -e \"process.exit(process.platform === 'win32' ? 0 : 1)\") && ((edenfsctl info . && eden redirect add $npm_package_config_repo_path/node_modules symlink) || echo no eden found) || ((edenfsctl info . && eden redirect add $npm_package_config_repo_path/node_modules bind) || echo no eden found)",
    "install:all": "yarn install",
    "lint": "ts-node scripts/yarn-workspaces.ts lint",
    "tsc:core": "yarn workspace @xrpa/xrpa-utils run tsc && yarn workspace @xrpa/xrpa-file-utils run tsc && yarn workspace xrpa-internal-scripts run tsc && yarn workspace @xrpa/xrpa-llm-utils run tsc && yarn workspace @xrpa/xrpa-orchestrator run tsc",
    "tsc": "ts-node scripts/yarn-workspaces.ts tsc",
    "codegen": "ts-node scripts/yarn-workspaces.ts codegen",
    "build": "ts-node scripts/yarn-workspaces.ts build",
    "audio-input": "yarn workspace @xrpa/xred-audio-input run AudioInput",
    "audio-transcription": "yarn workspace @xrpa/xred-audio-transcription run Transcription",
    "debug": "yarn workspace @xrpa/xred-debug run ImageViewer",
    "signal-output": "yarn workspace @xrpa/xred-signal-output run XredOutput",
    "signal-processing": "yarn workspace @xrpa/xred-signal-processing run FbaProcessing",
    "device-input": "yarn workspace @xrpa/xred-device-input run SmartController",
    "interaction": "yarn workspace @xrpa/xred-interaction run ISDK",
    "ocr": "yarn workspace @xrpa/xred-optical-character-recognition run OCR",
    "perception-services:image-selector": "yarn workspace @xrpa/xred-perception-services run ImageSelector",
    "perception-services:llm-hub": "yarn workspace @xrpa/xred-perception-services run LlmHub",
    "perception-services:object-recognition": "yarn workspace @xrpa/xred-perception-services run ObjectRecognition",
    "sensor-input:camera": "yarn workspace @xrpa/xred-sensor-input run Camera",
    "sensor-input:aria": "yarn workspace @xrpa/xred-sensor-input run Aria",
    "speaker-identification": "yarn workspace @xrpa/xred-speaker-identification run SpeakerID",
    "tactile-pressure": "yarn workspace @xrpa/xred-tactile-pressure run AgiosFtp",
    "text-to-speech": "yarn workspace @xrpa/xred-text-to-speech run TextToSpeech",
    "tracking:fiducials": "yarn workspace @xrpa/xred-tracking run Fiducials",
    "tracking:optitrack": "yarn workspace @xrpa/xred-tracking run OptiTrack",
    "tracking:pulsar-sto": "yarn workspace @xrpa/xred-tracking run PulsarSTO",
    "tracking:quest": "yarn workspace @xrpa/xred-tracking run Quest",
    "visual-emotion-detection": "yarn workspace @xrpa/xred-visual-emotion-detection run Blueskeye",
    "gesture-detection": "yarn workspace @xrpa/xred-gesture-detection run Gesture",
    "clean": "ts-node scripts/yarn-workspaces.ts clean || true",
    "test": "ts-node scripts/yarn-workspaces.ts test || true",
    "publish:all": "yarn build && echo 'Ready for OSS publishing!'",
    "update-version-numbers": "ts-node scripts/update-version-numbers.ts"
  },
  "devDependencies": {
    "@types/node": "18.11.18",
    "@typescript-eslint/eslint-plugin": "^5.57.0",
    "@typescript-eslint/parser": "^5.57.0",
    "eslint": "8.32.0",
    "eslint-plugin-import": "^2.27.5",
    "ts-node": "^10.9.1",
    "typescript": "5.0.4"
  },
  "engines": {
    "node": ">=18.0.0",
    "yarn": ">=1.22.0"
  }
}
